<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="debug" name="RoutingTest" packages="org.apache.logging.log4j.test">
    <Properties>
        <Property name="filename">target/general/rollingtest.log</Property>
    </Properties>
    <ThresholdFilter level="debug"/>

    <Appenders>
        <Console name="STDOUT">
            <PatternLayout pattern="%m%n"/>
            <ThresholdFilter level="debug"/>
        </Console>
        <Routing name="Routing">
            <Routes pattern="$${ctx:tenant.id}">

                <!-- This route is chosen if ThreadContext has no value for key tenant.id. -->
                <Route key="$${ctx:tenant.id}">
                    <RollingFile name="Rolling-default" fileName="logs/constellio.log"
                                 filePattern="logs/archive/defaultLog-%d{yyyy-MM-dd}-%i.log.gz">
                        <PatternLayout>
                            <pattern>[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %p %c{3} - default - %m%n</pattern>
                        </PatternLayout>
                        <Policies>
                            <TimeBasedTriggeringPolicy interval="6" modulate="true"/>
                            <SizeBasedTriggeringPolicy size="10 MB"/>
                        </Policies>
                    </RollingFile>
                </Route>

                <!-- This route is chosen if ThreadContext has a value for tenant.id
                     The value dynamically determines the name of the log file and which folder to write it. -->
                <Route>
                    <RollingFile name="Rolling-${ctx:tenant.id}" fileName="logs/${ctx:tenant.id}/constellio.log"
                                 filePattern="logs/archive/tenant-${ctx:tenant.id}-%d{yyyy-MM-dd}-%i.log.gz">
                        <PatternLayout>
                            <pattern>[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %p %c{3} - tenant.id=${ctx:tenant.id} -
                                %m%n
                            </pattern>
                        </PatternLayout>
                        <Policies>
                            <TimeBasedTriggeringPolicy interval="6" modulate="true"/>
                            <SizeBasedTriggeringPolicy size="10 MB"/>
                        </Policies>
                    </RollingFile>
                </Route>
            </Routes>
        </Routing>
    </Appenders>

    <Loggers>
        <Logger name="STDOUT_APPENDER" level="INFO"
                additivity="false">
            <AppenderRef ref="STDOUT"/>
        </Logger>
        <Root level="TRACE">
            <AppenderRef ref="Routing"/>
        </Root>
    </Loggers>

</Configuration>